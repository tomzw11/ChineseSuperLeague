<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/scout_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/listview_scout_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/listview_scout_name"
            android:text="Wu Lei"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorAccent"
            />

        <TextView
            android:id="@+id/listview_scout_team"
            android:text="Shanghai SIPG"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/listview_scout_position"
            android:text="Forward"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />

        <Switch
            android:id="@+id/switch_scout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="20dp" />

    </LinearLayout>





</LinearLayout>