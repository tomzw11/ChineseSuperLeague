<?xml version="1.0" encoding="utf-8"?>

<!-- Layout for weather forecast list item for future day (not today) -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:background="@drawable/touch_selector"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        >
//TODO:Adjust item spacing.
        <ImageView
            android:id="@+id/listview_stat_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/listview_stat_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:id="@+id/listview_stat_oppo"/>

        <TextView
            android:id="@+id/listview_stat_score"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/listview_stat_player"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/listview_stat_name"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/listview_stat_team"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:visibility="gone"/>


</LinearLayout>