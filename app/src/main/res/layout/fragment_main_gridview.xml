<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_main_grid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:columnCount="2"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@color/grey"
>

    <TextView
        android:id="@+id/main_gridview_app"
        android:text="@string/main_gridview_main"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textColor="@color/primary_text"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_rowWeight="1" />

    <TextView
        android:id="@+id/fragment_main_appearance"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/primary_text"
        app:layout_gravity="fill"/>

    <TextView
        android:fontFamily="sans-serif"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/main_gridview_goal"
        android:textSize="20dp"
        android:textColor="@color/primary_text"
        app:layout_gravity="fill"
        app:layout_rowWeight="1"/>

    <TextView
        android:id="@+id/fragment_main_goal"
        android:gravity="center_vertical"
        android:textColor="@color/primary_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_gravity="center"/>

    <TextView
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:text="@string/main_gridview_rating"
        android:textColor="@color/primary_text"
        android:textSize="20dp"
        app:layout_gravity="fill"
        app:layout_rowWeight="1" />

    <tom.chinesefootballtracker.RatingView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textSize="36dp"
        android:layout_marginLeft="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@android:color/white"
        app:layout_gravity="fill"
        android:gravity="center"
        android:id="@+id/main_ratingView" />

</android.support.v7.widget.GridLayout>