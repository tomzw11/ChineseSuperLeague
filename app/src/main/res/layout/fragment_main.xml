<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/main_player_icon"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:adjustViewBounds="true"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/main_cname"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:textColor="@color/primary_text"
                            />

                        <TextView
                            android:id="@+id/main_lname"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="0dp"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:textColor="@color/primary_text"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingBottom="10dp"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:id="@+id/main_team_icon"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_height="40dp"
                            />

                        <TextView
                            android:id="@+id/main_team"
                            android:gravity="center|left"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="16dp"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/colorPrimaryDark"
                            />
                        
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingBottom="10dp"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:id="@+id/main_nation_icon"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_height="40dp"
                            />

                        <TextView
                            android:id="@+id/main_nation"
                            android:gravity="center|left"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textSize="16dp"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/colorPrimaryDark"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    <include
        layout="@layout/fragment_main_gridview_bio"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        ></include>

    <TextView
        android:id="@+id/fragment_main_title"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:text="Loading Data..."
        android:textSize="22dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textColorHighlight="@color/colorAccent"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:gravity="center_horizontal"/>

    <include layout="@layout/fragment_main_gridview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        />
